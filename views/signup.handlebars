<div class="card m-5">
  <h3 class="card-header">Sign Up</h3>

  <form class="signup-form">
    <div class="form-group m-3">
      <label for="username-register">Username</label>
      <input
        type="text"
        class="form-control"
        id="username-register"
        aria-describedby="username-register"
      />
    </div>
    <div class="form-group m-3">
      <label for="email-register">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email-register"
        aria-describedby="email-register"
      />
    </div>
    <div class="form-group m-3">
      <label for="password-register">Password</label>
      <input type="password" class="form-control" id="password-register" />
    </div>
    <button type="submit" class="btn btn-primary m-3">Sign Up</button>
    <a class="register-link m-3" href="/login">Log In Instead</a>
  </form>
</div>

<script src="/js/signup.js"></script>